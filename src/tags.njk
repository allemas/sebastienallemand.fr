---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/base.njk

title: Articles
permalink: /tags/{{ tag }}/
---

<h1 class="headline">Articles {{ tag }}</h1>

{% set postslist = collections[ tag ] %}
<ul class="listing" >
  {% for post in postslist  | reverse %}
  <li>
    <article>
      <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
      <div class="meta">
        <time datetime="{{ post.date | readableDate }}">{{ post.date | readableDate }}</time>
        -  {% for tag in post.data.tags %} {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" class="tag-homepage">{{ tag }}</a>{% endfor %}
      </div>
    </article>
  </li>
  {% endfor %}
</ul>

